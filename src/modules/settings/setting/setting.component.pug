.setting-page
  go-header(activePage="settings", title="Settings")
  .photo-area.row
    .col-3
      img.avator(*ngIf="!userAvatar" src="../assets/avatar.png")
      img.avator(*ngIf="userAvatar" src="{{ userAvatar }}")
    .col-9
      p.name {{ user.first_name }} {{ user.last_name }}
      p.mail.grey5 {{ user.mail }}

  .actions-area
    .action-area
      span.action-name Allow quick button
      .switch
        input#cmn-toggle-2.cmn-toggle.cmn-toggle-round(type="checkbox", [(ngModel)]="quickButtonEnabled", (click)="toggleQuickButton()")
        label.label-switch(for="cmn-toggle-2")

    .action-area
      span.action-name Show annotation indicators for texts that I quoted on websites
      .switch
        input#cmn-toggle-highlight-note.cmn-toggle.cmn-toggle-round(type="checkbox", [(ngModel)]="highlightNotesEnabled", (click)="toggleHighlightNotes()")
        label.label-switch(for="cmn-toggle-highlight-note")

    .action-area
      span.action-name Show inline 'Create Note' tooltip when I select text on websites
      .switch
        input#cmn-toggle-create-note.cmn-toggle.cmn-toggle-round(type="checkbox", [(ngModel)]="createNoteEnabled", (click)="toggleCreateNoteToolTip()")
        label.label-switch(for="cmn-toggle-create-note")

    .action-area
      span.action-name Default Portal
      portal-selection([(portal)]="defaultPortal", (portalChange)="changeDefaultPortal(defaultPortal)")

  .signout-area
    a.btn.btn-primary.btn-sm.signout-btn((click)="signout()" tabindex="-1") Sign Out

  .copyright.
    GO1 Extension v{{ versionInfo }}. Copyright &copy; {{ currentYear }} GO1 Pty.
