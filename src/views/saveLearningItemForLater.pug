.add-to-portal-scheduled.animated
  header.extension-header.row
    .col-2
      a.btn.btn-no-border.btn-no-padding.go-back-btn((click)="goBack()" role="button")
        i.icon.icon-left-arrow
    .col-8.text-center
      h5 Schedule
    .col-2

  .schedule-section
    .form-group
      label Date
      input.form-control([(ngModel)]="data.tags", placeholder="Date")

    .form-group
      label Time
      input.form-control([(ngModel)]="data.tags", placeholder="Time")

  .actions-area.row
    .col-8.offset-2
      button.btn.btn-primary.btn-block.rounded-btn#saveForLater((click)="save()") Save
