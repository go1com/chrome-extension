.add-to-portal.animated
  go-header([title]="'Add to Portal'")

  .related-to
    .link-preview-frame
      .is-loading([hidden]="!isLoading")
        .col Loading Preview...
      .loading-completed([hidden]="isLoading")
        .site-info-container
          img.favicon([src]="linkPreview?.favicon")
          .site-domain.grey5 {{ linkPreview?.hostname }}
        .site-detail-container
          h5
            | {{ linkPreview && linkPreview.title }}

  .note-detail-section
    .form-group
      div.grey5.related-to-title Add Tags:

      tag-input([(ngModel)]="data.tags", placeholder="Add tags")

    //.form-group
    //  h6 Select Portal
    //
    //  portal-selection([(portal)]="data.instance")

    .actions-area
      .row
        .col-6
          button.btn.btn-primary.btn-block#addToPortal((click)="onAddToPortalBtnClicked()") Add to Portal

        .col-6
          button.btn.btn-primary.btn-block#markAsComplete((click)="onMarkAsCompleteBtnClicked()") Mark as Complete

